
@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>

@ViewBag.Error
<form method="post" asp-controller="login" asp-action="process">
    <div class="logging-bar">
        <table>
            <tr>
                <td>Username</td>
                <td>
                    <input type="text" name="username" />
                </td>
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <input type="password" name="password" />
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" value="Login" />
                </td>
            </tr>
        </table>
    </div>
</form>