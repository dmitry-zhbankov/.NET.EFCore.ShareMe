<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShareMe</title>
    @*<link rel="stylesheet" href="~/css/css_reset.css"/>*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header">
        <div class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">ShareMe</a>
        </div>
        <div class="main-menu">
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="Article" asp-action="Index">Articles</a></li>
            </ul>
        </div>
        <div>
            <a asp-controller=Login asp-action="Index">Login</a>
        </div>
    </header>
    <div class="main">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="footer-content">
            &copy; 2019 - ShareMe
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
